<meeting>
	<date>{date}</date>
	{% if participants %}
		<participants>
			{%  for participant in participants %}
				<participant>{{ participant }}</participant>
			{%  endfor %}
		</participants>
	{%  endif %}
	{%  include "metadata.jinja" %}
	{% if summary %}
		<summary>{{ summary }}</summary>
	{%  endif %}
	{% if transcript %}
		<transcript>
			{{ transcript }}
		</transcript>
	{% endif %}
</meeting>
